{
  "name": "@soot/status",
  "version": "1.0.0",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "start": "lerna run local:start --stream --scope @soot/status",
    "build": "lerna run local:build --stream --scope @soot/status",
    "test": "lerna run local:test --stream --scope @soot/status",
    "local:build": "NODE_ENV=production rollup -c --failAfterWarnings",
    "local:start": "NODE_ENV=development rollup -c --failAfterWarnings --watch",
    "local:test": "jest --forceExit",
    "lint": "concurrently npm:lint:*",
    "lint:deadcode": "ts-prune -e | (! grep -v 'used in module')",
    "lint:depcheck": "depcheck",
    "lint:eslint": "eslint . --max-warnings=0",
    "lint:prettier": "prettier . --check",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:prettier": "prettier . --write",
    "format:eslint": "eslint . --fix"
  },
  "devDependencies": {
    "@babel/core": "7.22.0",
    "@babel/plugin-transform-runtime": "7.21.0",
    "@babel/preset-env": "7.22.0",
    "@babel/runtime": "7.21.0",
    "@rollup/plugin-typescript": "9.0.2",
    "@soot/style": "*",
    "@soot/tsconfig": "*",
    "@types/jest": "29.5.11",
    "@types/jsdom": "20.0.1",
    "babel-jest": "29.7.0",
    "concurrently": "7.6.0",
    "depcheck": "1.4.7",
    "eslint": "8.35.0",
    "jest": "29.7.0",
    "prettier": "2.8.4",
    "rollup": "3.26.2",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-dts": "5.3.0",
    "ts-jest": "29.1.1",
    "ts-prune": "0.10.3",
    "typescript": "4.7.2"
  }
}
